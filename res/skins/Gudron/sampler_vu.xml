    <Layout>stacked</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Size>-1,3</Size>
    <Style>
      QGroupBox {
        border-top: 0 solid green;
        background-color: rgba(0,0,0,64);
      }
    </Style>
    <Children>
