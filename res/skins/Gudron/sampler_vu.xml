        <Children></Children>
        <Connection>
          <ConfigKey><Variable name="group"/>,PeakIndicator</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
      </WidgetGroup> -->
      <PushButton>
        <TooltipId>sampler_VuMeter</TooltipId>
        <Style/>
        <ObjectName>Overload</ObjectName>
        <NumberStates>2</NumberStates>
        <LeftClickIsPushButton>false</LeftClickIsPushButton>
        <RightClickIsPushButton>false</RightClickIsPushButton>
        <Connection>
          <ConfigKey><Variable name="group"/>,PeakIndicator</ConfigKey>
          <ConnectValueFromWidget>false</ConnectValueFromWidget>
        </Connection>
      </PushButton>
      <!-- <StatusLight>
        <TooltipId>sampler_PeakIndicator</TooltipId>
        <PathStatusLight>sampler/vu_over.png</PathStatusLight>
        <PathBack></PathBack>
        <Connection>
          <ConfigKey></ConfigKey>
        </Connection>
