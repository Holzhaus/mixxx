      <VuMeter>
        <TooltipId>sampler_VuMeter</TooltipId>
        <PathVu>sampler/vu_peak.png</PathVu>
        <PathBack/>
        <PeakHoldSize>4</PeakHoldSize>
        <PeakHoldTime>250</PeakHoldTime>
        <PeakFallTime>40</PeakFallTime>
        <PeakFallStep>2</PeakFallStep>
        <Horizontal>true</Horizontal>
        <Connection>
          <ConfigKey><Variable name="group"/>,VuMeter</ConfigKey>
        </Connection>
      </VuMeter>
    </Children>
  </WidgetGroup>
  <WidgetGroup>
    <SizePolicy>me,min</SizePolicy>
    <Size>me,3</Size>
    <Style>
      QGroupBox {
        border-top: 1px solid rgba(255, 255, 255, 16);
        background-color: transparent;
      }
    </Style>
  </WidgetGroup>
</Template>
