<!DOCTYPE template>
<!--
  Description:
    Deck rewind + repeat + key lock + pitch +/-.
  Variables:
    group: the group to connect to
-->
<Template>
  <WidgetGroup>
    <ObjectName>Mixer2Gain</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>f,f</SizePolicy>
    <Style>QGroupBox { background-color: rgba(0,0,0,0); background: url(skin:/backgrounds/transparent.png); }</Style>
    <Children>
      <WidgetGroup>
        <Size>60,e</Size>
        <Layout>vertical</Layout>
        <Style>QGroupBox { border: 0px solid green;  margin: 0px 0px 0px 0px; } </Style>
        <Children>
          <WidgetGroup>
            <Size>m,1</Size>
          </WidgetGroup>
          <!-- Fader -->
          <WidgetGroup>
            <Size>60,148</Size>
            <Style>QGroupBox { border: 0px solid green;  margin: 0px 0px 0px 0px; background: url(skin:/mixer/fader_bg_vu.png);} </Style>
            <Children>
              <VuMeter>
                <TooltipId>channel_VuMeter</TooltipId>
                <Style></Style>
                <PathVu>mixer/vu_1.png</PathVu>
                <PathBack>mixer/vu_0.png</PathBack>
                <Pos>29,8</Pos>
                <Horizontal>false</Horizontal>
                <PeakHoldSize>5</PeakHoldSize>
                <PeakHoldTime>500</PeakHoldTime>
                <PeakFallTime>50</PeakFallTime>
                <PeakFallStep>2</PeakFallStep>
                <Connection>
                  <ConfigKey><Variable name="group"/>,VuMeter</ConfigKey>
                </Connection>
              </VuMeter>
              <StatusLight>
                <TooltipId>channel_PeakIndicator</TooltipId>
                <Style></Style>
                <PathStatusLight>mixer/vu_over.png</PathStatusLight>
                <PathBack>mixer/vu_0.png</PathBack>
                <Pos>29,8</Pos>
                <Connection>
                  <ConfigKey><Variable name="group"/>,PeakIndicator</ConfigKey>
                </Connection>
              </StatusLight>
              <SliderComposed>
                <TooltipId>channel_volume</TooltipId>
                <Style></Style>
                <Handle>mixer/fader_handle.png</Handle>
                <Slider>mixer/fader_bg_ticks.png</Slider>
                <Pos>0,0</Pos>
                <Horizontal>false</Horizontal>
                <Connection>
                  <ConfigKey><Variable name="group"/>,volume</ConfigKey>
                  <EmitOnDownPress>false</EmitOnDownPress>
                </Connection>
              </SliderComposed>
            </Children>
          </WidgetGroup>
          <!-- Gain -->
          <WidgetGroup>
            <Size>f,f</Size>
            <Layout>horizontal</Layout>
            <Style>QGroupBox { border: 0px solid green;  margin: 0px 0px 0px 0px; } </Style>
            <Children>
              <WidgetGroup>
                <Size>2,me</Size>
              </WidgetGroup>
              <WidgetGroup>
                <Size>56f,59</Size>
                <Layout>vertical</Layout>
                <Style>QGroupBox { border: 0px solid green;  margin: 0px 0px 0px 0px; background: url(skin:/knobs/white/bg.png); } </Style>
                <Children>
                  <Knob>
                    <TooltipId>pregain</TooltipId>
                    <Style></Style>
                    <NumberStates>120</NumberStates>
                    <Path>knobs/cyan/%1.png</Path>
                    <Connection>
                      <ConfigKey><Variable name="group"/>,pregain</ConfigKey>
                    </Connection>
                  </Knob>
                </Children>
              </WidgetGroup>
            </Children>
          </WidgetGroup>
          <!-- PFL -->
          <WidgetGroup>
            <Size>f,f</Size>
            <Layout>horizontal</Layout>
            <Style>QGroupBox { border: 0px solid green;  margin: 0px 0px 0px 0px; } </Style>
            <Children>
              <WidgetGroup>
                <Size>1,me</Size>
              </WidgetGroup>
              <PushButton>
                <TooltipId>pfl</TooltipId>
                <NumberStates>2</NumberStates>
                <State>
                  <Number>0</Number>
                  <Pressed>mixer/pfl_0.png</Pressed>
                  <Unpressed>mixer/pfl_0.png</Unpressed>
                </State>
                <State>
                  <Number>1</Number>
                  <Pressed>mixer/pfl_1.png</Pressed>
                  <Unpressed>mixer/pfl_1.png</Unpressed>
                </State>
                <Connection>
                  <ConfigKey><Variable name="group"/>,pfl</ConfigKey>
                </Connection>
              </PushButton>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
