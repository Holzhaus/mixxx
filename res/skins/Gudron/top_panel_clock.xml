<!DOCTYPE template>
<!--
  Description:
    Old FX section (Flanger).
-->
<Template>
  <WidgetGroup>
    <ObjectName>TopPanelFX</ObjectName>
    <SizePolicy>f,f</SizePolicy>
    <Size>120,32</Size>
    <Layout>horizontal</Layout>
    <Style>QGroupBox { background: url(skin:/backgrounds/panel_recess_clock.png); } </Style>
    <Children>
      <WidgetStack currentpage="[Colorscheme],current" persist="true">
        <Size>e,e</Size>
        <Children>
          <Time trigger="[Colorscheme],velvet">
              <TooltipId>time</TooltipId>
              <Style>QLabel { color: #847fa6; text-align: left; text-transform: uppercase; padding-top: 4px;}</Style>
              <ShowSeconds>false</ShowSeconds>
              <ClockFormat>24</ClockFormat>
          </Time>
          <Time trigger="[Colorscheme],legacy">
              <TooltipId>time</TooltipId>
              <Style>QLabel { color: #bc2645; text-align: left; text-transform: uppercase; padding-top: 4px;}</Style>
              <ShowSeconds>false</ShowSeconds>
              <ClockFormat>24</ClockFormat>
          </Time>
          <Time trigger="[Colorscheme],mono">
              <TooltipId>time</TooltipId>
              <Style>QLabel { text-align: left; text-transform: uppercase; padding-top: 4px;}</Style>
              <ShowSeconds>false</ShowSeconds>
              <ClockFormat>24</ClockFormat>
          </Time>
          <Time trigger="[Colorscheme],submarine">
              <TooltipId>time</TooltipId>
              <Style>QLabel { color: #47ac96; text-align: left; text-transform: uppercase; padding-top: 4px;}</Style>
              <ShowSeconds>false</ShowSeconds>
              <ClockFormat>24</ClockFormat>
          </Time>
        </Children>
      </WidgetStack>
    </Children>
    </WidgetGroup>
</Template>
