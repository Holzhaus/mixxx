				<WidgetGroup>
		                <ObjectName>VinylStatusTop<Variable name="channum" /></ObjectName>
		                <SizePolicy>me,min</SizePolicy>
						<MinimumSize>0,0</MinimumSize>
		                <Layout>vertical</Layout>
		                <Children>
		                    <StatusLight>
								<Size>2me,7f</Size>
								<TooltipId>vinylcontrol_status</TooltipId>
		                        <NumberPos>3</NumberPos>
		                        <PathStatusLight scalemode="STRETCH">deck/btn_vinylcontrol_indicator_horizontal1.png</PathStatusLight>
		                        <PathStatusLight2 scalemode="STRETCH">deck/btn_vinylcontrol_indicator_horizontal2.png</PathStatusLight2>
		                        <PathStatusLight3 scalemode="STRETCH">deck/btn_vinylcontrol_indicator_horizontal3.png</PathStatusLight3>
		                        <Connection>
		                            <ConfigKey><Variable name="group"/>,vinylcontrol_status</ConfigKey>
									<ConfigKey>[VinylControl],show_vinylcontrol</ConfigKey>
									<BindProperty>visible</BindProperty>
		                        </Connection>
		                    </StatusLight>
							<Visual>
            <TooltipId>waveform_display</TooltipId>
            <Group><Variable name="group"/></Group>
            <Size>e,e</Size>
            <BgPixmap>deck/waveform_bg.png</BgPixmap>
            <Align>default</Align>
            <SignalColor>#AAAAAA</SignalColor>
              <SignalLowColor>#656277</SignalLowColor>
              <SignalMidColor>#AB987C</SignalMidColor>
              <SignalHighColor>#FFFFFF</SignalHighColor>
            <BeatColor>#999999</BeatColor>
              <EndOfTrackColor>#EE2299</EndOfTrackColor>
              <AxesColor>#333333</AxesColor>
              <PlayPosColor>#FF0000</PlayPosColor>
            <BeatHighlightColor>#44EE22</BeatHighlightColor>
              <HfcColor>#333333</HfcColor>
            <MarkerColor>#FF0000</MarkerColor>
            <CueColor>#FFFF00</CueColor>
            <DefaultMark>
              <Align>top</Align>
              <Color>#00FF00</Color>
              <TextColor>#000000</TextColor>
              <Text> %1 </Text>
            </DefaultMark>
            <MarkRange>
              <StartControl>loop_start_position</StartControl>
              <EndControl>loop_end_position</EndControl>
              <EnabledControl>loop_enabled</EnabledControl>
              <Color>#b7ff24</Color>
              <DisabledColor>#FFFFFF</DisabledColor>
            </MarkRange>
            <Mark>
              <Control>loop_start_position</Control>
              <Pixmap>deck/marker_loop_in1.png</Pixmap>
              <Text>IN</Text>
              <Align>bottom</Align>
              <Color>#00FF00</Color>
              <TextColor>#FFFFFF</TextColor>
            </Mark>
            <Mark>
              <Control>loop_end_position</Control>
              <Pixmap>deck/marker_loop_out1.png</Pixmap>
              <Text>OUT</Text>
              <Align>bottom</Align>
              <Color>#00FF00</Color>
              <TextColor>#FFFFFF</TextColor>
            </Mark>
            <Mark>
              <Control>hotcue_1_position</Control>
              <Pixmap>deck/marker_hotcue1_1.png</Pixmap>
              <Text>1</Text>
              <Align>bottom</Align>
              <Color>#00FF00</Color>
